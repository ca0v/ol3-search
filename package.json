{
	"name": "ol3-search",
	"version": "5.1.3",
	"description": "OpenLayers Search",
	"main": "built/index.js",
	"scripts": {
		"clean": "rm built/** -rf",
		"update": "npm install ol3-fun",
		"build-for-amd": "tsc -p tsconfig.json --outFile built/index.max.js",
		"build-for-examples": "tsc -p examples/tsconfig.json --outFile ./built/examples.max.js",
		"live-for-examples": "live-server --port=5001 --wait=200 --watch=./built/*.max.js --open=\"./loaders/tests.html?debug=1&theme=dark\" --browser=CHROME",
		"dev-for-examples": "npm run build-for-examples && start npm run live-for-examples && start npm run build-for-examples -- -w",
		"examples": "npm run build-for-examples && npm run live-for-examples",
		"build-for-tests": "tsc -p tests/tsconfig.json --outFile ./built/tests.max.js",
		"build-for-loaders": "tsc -p loaders/tsconfig.json",
		"live-for-tests": "live-server --port=5000 --wait=200 --watch=./built/*.max.js --open=\"./loaders/tests.html?debug=1&theme=dark&test=*\" --browser=CHROME",
		"dev-for-tests": "npm run build-for-tests & start npm run live-for-tests & npm run build-for-tests -- -w",
		"tests": "npm run dev-for-tests",
		"install": "npm run build-for-amd",
		"before-push": "npm run clean && npm run build-for-loaders && npm run build-for-amd && npm run build-for-tests && npm run build-for-examples && mv built/index.max.d.ts built/index.d.ts && npm run live-for-tests",
		"test": "npm run before-push && npm run live-for-tests"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ca0v/ol3-search.git"
	},
	"author": "coreyalix@hotmail.com",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/ca0v/ol3-search/issues"
	},
	"homepage": "https://github.com/ca0v/ol3-search#readme",
	"devDependencies": {
		"@types/jquery": "^3.3.9",
		"@types/mocha": "^5.2.5",
		"@types/openlayers": "^4.6.12",
		"@types/requirejs": "^2.1.31",
		"jquery": "^3.3.1",
		"live-server": "^1.2.0",
		"mocha": "^5.2.0",
		"ol3-fun": "https://github.com/ca0v/ol3-fun/tarball/v5.1.3",
		"typescript": "^3.0.3"
	}
}
